<div class="container">
  <div class="user-info">
    <dl class="dl-horizontal">
      <dt>Name:</dt>
      <dd><%= @user.name %></dd>

      <dt>Email:</dt>
      <dd><%= @user.email %></dd>

      <dt>Native language:</dt>
      <dd><%= @user.native_language %></dd>
    </dl>

  </div>
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Back', users_path %>
</div>
