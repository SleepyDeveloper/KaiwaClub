<div class="container">
  <h1><%= @meetup.date %> <small>(<%= @meetup.attendees.count %>)</small></h1>
  <hr />

  <div class="row">
    <div class="col-md-6">
      <h4>Breakdown</h4>
      <% data = [
          { value: @meetup.japanese_attendees.count, color:"#F7464A", highlight: "#FF5A5E", label: "Japanese"},
          { value: @meetup.english_attendees.count, color:"#46BFBD", highlight: "#5AD3D1", label: "English"}
          ] %>
      <%= pie_chart(data, generateLegend: true,
        animation: false,
        legendTemplate: render("layouts/legend") ) %>
    </div>
    <div class="col-md-6">
      <h4>Roll Sheet</h4>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Native Language</th>
          </tr>
        </thead>
        <tbody>
          <% @meetup.attendees.each do | attendee | %>
          <tr>
            <td><%= attendee.name %></td>
            <td><%= attendee.native_language %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= link_to "Back", meetups_path %>
</div>
